@model User

@{
    ViewBag.Title = Model.FirstName;
}

<article class="flex flex-col shadow-lg my-4 p-6 rounded-lg bg-light-pink">
    @if (Model != null)
    {
        <div class="flex flex-col justify-start bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-3xl font-bold text-dark-pink pb-3">@Model.FirstName @Model.LastName</h1>
            <p class="text-gray-700">@Html.Raw(Model.Email)</p>
        </div>
    }
    else
    {
        <p class="text-center text-gray-600">Üzgünüm, böyle bir kullanıcı bulunmuyor.</p>
    }
</article>

@section Styles {
    <style>
        .bg-light-pink {
            background-color: #f48fb1; /* Çok açık pembe */
        }

        .text-dark-pink {
            color: #d81b60; /* Koyu pembe */
        }

        .article-shadow {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .p-6 {
            padding: 1.5rem;
        }
    </style>
}
