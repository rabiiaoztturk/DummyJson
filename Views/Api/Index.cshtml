@model List<User>

<h2>Kullanıcılar</h2>

<br />
<table class="table table-striped table-custom">
    <thead>
        <tr>
            <th scope="col" width="25%">Ad Soyad</th>
            <th scope="col" width="15%">E-Posta</th>
            <th scope="col" width="15%">Yaş</th>
            <th scope="col" width="10%">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>
                    <a href="api/Detail/@user.Id" class="btn btn-light-pink btn-sm">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        .table-custom {
            background-color: #f5f7fa; /* Tablo arka plan rengi */
            border-radius: 8px;
            overflow: hidden;
        }

            .table-custom th {
                background-color: #f48fb1; /* Başlık arka plan rengi */
                color: white;
                font-weight: bold;
            }

            .table-custom td, .table-custom th {
                padding: 12px;
                text-align: left;
            }

        .btn-light-pink {
            background-color: #f48fb1; /* Açık pembe */
            color: white;
            border: none;
            border-radius: 8px;
            padding: 5px 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-light-pink:hover {
                background-color: #f06292; /* Daha belirgin pembe */
                transform: scale(1.05);
            }
    </style>
}
