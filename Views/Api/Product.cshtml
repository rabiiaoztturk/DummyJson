@model List<Product>

<div class="container">
    <h2 class="text-center text-dark-pink mb-3">Ürünler</h2>

    <table class="table table-striped table-custom">
        <thead>
            <tr>
                <th scope="col" width="25%">Ürün Adı</th>
                <th scope="col" width="30%">Açıklaması</th>
                <th scope="col" width="20%">Kategori</th>
                <th scope="col" width="20%">Fiyat</th>
                <th scope="col" width="10%">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.title</td>
                    <td>@product.description</td>
                    <td>@product.category</td>
                    <td>@product.price</td>
                    <td>
                        <a href="/api/ProductDetail/@product.Id" class="btn btn-light-pink btn-sm">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .container {
            max-width: 1200px; /* İsteğe bağlı: Konteyner genişliği */
            margin: auto;
            padding: 0 15px;
        }

        .text-center {
            text-align: center;
        }

        .text-dark-pink {
            color: #d81b60; /* Koyu pembe */
        }

        .mb-3 {
            margin-bottom: 0.75rem; /* Başlık ve tablo arasındaki boşluğu azaltır */
        }

        .table-custom {
            background-color: #f5f7fa; /* Tablo arka plan rengi */
            border-radius: 8px;
            overflow: hidden;
            margin-top: 20px;
        }

            .table-custom th {
                background-color: #ec407a; /* Başlık arka plan rengi */
                color: white;
                font-weight: bold;
            }

            .table-custom td, .table-custom th {
                padding: 12px;
                text-align: left;
            }

        .btn-light-pink {
            background-color: #f48fb1; /* Açık pembe */
            color: white;
            border: none;
            border-radius: 8px;
            padding: 5px 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-light-pink:hover {
                background-color: #f06292; /* Daha belirgin pembe */
                transform: scale(1.05);
            }
    </style>
}
